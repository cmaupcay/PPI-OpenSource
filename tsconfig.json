{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "outDir": "./dist/",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
